root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[{Dockerfile,Dockerfile.*}]
indent_size = 4
tab_width = 4

[{Makefile,Makefile.*}]
indent_size = 4
indent_style = tab
tab_width = 4

[*.go]
indent_size = 4
indent_style = tab
tab_width = 4

[*.py]
indent_size = 4
tab_width = 4

[*.sql]
indent_size = 4
tab_width = 4

[*.toml]
indent_size = 4
tab_width = 4
